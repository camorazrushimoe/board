<%= @advert.each do |advert| %>
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<%= advert.title %>
			</div>
			<div class="panel-body">
			    <%= advert.description %>
			    <p>Price: <span class="label label-danger"><%= advert.price %></span></p>
			    <p>category: <%#= @advert.category.title %></p>
			    <p>Last update: <%= advert.updated_at %></p>
			    <p>dd<%= advert.img_url %></p>
			</div>
			<div class="panel-footer">
				<%= link_to 'Show', advert %> | <%= link_to 'Edit', edit_advert_path(advert) %> | <%= link_to 'Destroy', advert, method: :delete, data: { confirm: 'Are you sure?'} %>
			</div>
		</div>
	</div>	
<% end %>





